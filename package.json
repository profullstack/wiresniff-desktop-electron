{
  "name": "wiresniff-desktop",
  "version": "1.0.0",
  "description": "WireSniff - A powerful API client for REST, WebSocket, GraphQL, and SSE",
  "main": "out/main/index.js",
  "author": "WireSniff Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "build": "unset ELECTRON_RUN_AS_NODE && electron-vite build && electron-builder",
    "build:win": "unset ELECTRON_RUN_AS_NODE && electron-vite build && electron-builder --win",
    "build:mac": "unset ELECTRON_RUN_AS_NODE && electron-vite build && electron-builder --mac",
    "build:linux": "unset ELECTRON_RUN_AS_NODE && electron-vite build && electron-builder --linux",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@stripe/stripe-js": "^8.6.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "better-sqlite3": "^9.2.2",
    "clsx": "^2.1.0",
    "eventsource": "^2.0.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "lucide-react": "^0.303.0",
    "monaco-editor": "^0.45.0",
    "nanoid": "^5.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.40.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.3",
    "autoprefixer": "^10.4.16",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7",
    "electron-vite": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.1",
    "vite": "^5.0.10",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "build": {
    "appId": "com.wiresniff.desktop",
    "productName": "WireSniff",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "resources/icons/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "resources/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "wiresniff",
      "repo": "wiresniff-desktop"
    }
  }
}